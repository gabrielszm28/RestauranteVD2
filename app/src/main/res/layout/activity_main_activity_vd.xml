<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityVD">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Restarurante VD"
        android:id="@+id/tituloTV"
        android:layout_gravity="center_horizontal" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="4">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imageButton"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click1"
            android:src="@drawable/imagen1"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton2"
            android:layout_row="1"
            android:layout_column="0"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click2"
            android:src="@drawable/imagen2"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:layout_row="1"
            android:layout_column="1"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click3"
            android:src="@drawable/imagen3"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton4"
            android:layout_row="2"
            android:layout_column="0"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click4"
            android:src="@drawable/imageen4"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton5"
            android:layout_row="2"
            android:layout_column="1"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click5"
            android:src="@drawable/imagen5"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton6"
            android:layout_row="3"
            android:layout_column="0"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click6"
            android:src="@drawable/imagen6"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton7"
            android:layout_row="3"
            android:layout_column="1"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click7"
            android:src="@drawable/imagen7"/>
    </GridLayout>

</LinearLayout>
